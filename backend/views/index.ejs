<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!--<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">-->
    <title>Document</title>
</head>
<body>
<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-lg-12 col-md-offset-3">
            <div class="col-md-4">
                <a href="/add-task" class="btn btn-primary btn-lg">Add Task</a>
            </div>
            <div class="col-md-4">
                <a href="/tasks/1" class="btn btn-primary btn-lg">Pagination Page</a>
            </div>
        </div>
    </div>

    <div class="row">
        <% for (var i = 0; i < tasks.length; i++) { %>
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="<%= tasks[i].cover %>">
                <div class="caption">
                    <h3><%= tasks[i].name %></h3>
                    <p><%= tasks[i].time %></p>
                </div>
            </div>
        </div>
        <% } %>
    </div>

</div>


</body>
</html>
